# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/contact_db

# =============================================================================
# AWS SES 認証設定（2026年ベストプラクティス）
# =============================================================================
# 本番環境: STS AssumeRole を使用（推奨）
# 開発環境: SES_ROLE_ARN を空にすると IAM Access Key を直接使用
# =============================================================================

# AWS リージョン
AWS_REGION=us-east-2

# AssumeRole 用ユーザーの認証情報（railway-sts-user）
# ※本番環境では SES 直接アクセス権限は不要、AssumeRole 権限のみ必要
AWS_ACCESS_KEY_ID=your_railway_sts_user_access_key_id
AWS_SECRET_ACCESS_KEY=your_railway_sts_user_secret_access_key

# STS AssumeRole 設定（本番環境では必須）
# SES 送信権限を持つ IAM Role の ARN
SES_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/SES-Railway-Role

# SES メール設定
SES_FROM_EMAIL=no-reply@gizmodojp-line-bot.frwi.tech
ADMIN_EMAIL=admin@example.com

# LINE
LINE_CHANNEL_ID=your_line_channel_id

# CORS
LIFF_ORIGIN=https://liff.line.me
ALLOWED_ORIGINS=https://liff.line.me

# App
DEBUG=false
